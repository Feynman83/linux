/dts-v1/;
#include "imx6q.dtsi"
#include "imx6qdl-rbc-rj45.dtsi"

/ {
	model = "Xbrother RainbowC i.MX6 Quad Board";
	compatible = "rex,imx6q-rbc", "fsl,imx6q";

	memory@10000000 {
		device_type = "memory";
		reg = <0x10000000 0x80000000>;
	};

	gpio-keys {
		compatible = "gpio-keys";
		homepage-key {
			gpios = <&gpio4 28 GPIO_ACTIVE_HIGH>;
			linux,code = <KEY_MENU>;
			label = "homepage key";
			debounce-interval = <10>;
		};
	};
};

	&uart2 {
		pinctrl-0 = <&pinctrl_uart2 &pinctrl_uart2_rts>;
		rts-gpios = <&gpio4 15 GPIO_ACTIVE_LOW>;
    	linux,rs485-enabled-at-boot-time;
	};

	&uart3 {
		pinctrl-0 = <&pinctrl_uart3 &pinctrl_uart3_rts>;
		rts-gpios = <&gpio4 10 GPIO_ACTIVE_LOW>;
		linux,rs485-enabled-at-boot-time;
	};

	&uart4 {
		pinctrl-0 = <&pinctrl_uart4 &pinctrl_uart4_rts>;
		rts-gpios = <&gpio4 12 GPIO_ACTIVE_LOW>;
		linux,rs485-enabled-at-boot-time;
	};

	&uart5 {
		pinctrl-0 = <&pinctrl_uart5 &pinctrl_uart5_rts>;
		rts-gpios = <&gpio4 14 GPIO_ACTIVE_LOW>;
		linux,rs485-enabled-at-boot-time;
	};

	&sata{
		status = "okay";
	};

	